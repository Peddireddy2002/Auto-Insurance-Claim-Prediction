# =================================================================
# CLAIM PROCESSING AUTOMATION - ENVIRONMENT CONFIGURATION
# =================================================================

# Application Settings
APP_NAME=Claim Processing Automation
APP_VERSION=1.0.0
DEBUG=true
HOST=127.0.0.1
PORT=8000
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# =================================================================
# DATABASE CONFIGURATION
# =================================================================

# Main Database (PostgreSQL recommended for production)
DATABASE_URL=sqlite:///./claim_processing.db
# DATABASE_URL=postgresql://username:password@localhost:5432/claim_processing

# Redis for caching and background tasks
REDIS_URL=redis://localhost:6379/0

# =================================================================
# AI & LLM CONFIGURATION
# =================================================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.1

# Alternative LLM providers (optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# =================================================================
# PAYMENT PROCESSING (STRIPE)
# =================================================================

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Payment Settings
AUTO_APPROVE_THRESHOLD=1000.0
MANUAL_REVIEW_THRESHOLD=50000.0
MAX_CLAIM_AMOUNT=100000.0

# =================================================================
# FILE PROCESSING & OCR
# =================================================================

# Upload Configuration
UPLOAD_FOLDER=./uploads
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=pdf,png,jpg,jpeg,tiff,bmp

# OCR Configuration
TESSERACT_CMD=/usr/bin/tesseract
POPPLER_PATH=/usr/bin
OCR_LANGUAGE=eng
OCR_CONFIG=--oem 3 --psm 6

# Image Processing
IMAGE_DPI=300
IMAGE_QUALITY=95
ENABLE_IMAGE_PREPROCESSING=true

# =================================================================
# SECURITY CONFIGURATION
# =================================================================

# JWT Configuration
SECRET_KEY=your_super_secret_jwt_key_here_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# =================================================================
# BUSINESS RULES & FRAUD DETECTION
# =================================================================

# Validation Thresholds
FRAUD_SCORE_THRESHOLD=0.7
HIGH_RISK_AMOUNT=25000.0
DUPLICATE_CLAIM_WINDOW_DAYS=30

# Processing Rules
ENABLE_AUTO_APPROVAL=true
REQUIRE_MANUAL_REVIEW_ABOVE=50000.0
ENABLE_FRAUD_DETECTION=true

# =================================================================
# MONITORING & ALERTING
# =================================================================

# Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@yourcompany.com

# Slack Notifications (optional)
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# =================================================================
# CLOUD STORAGE (OPTIONAL)
# =================================================================

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=claim-processing-documents

# Google Cloud Storage (alternative)
GOOGLE_CLOUD_PROJECT=your_project_id
GOOGLE_CLOUD_BUCKET=claim-processing-documents

# =================================================================
# BACKGROUND TASKS
# =================================================================

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# =================================================================
# DEVELOPMENT & TESTING
# =================================================================

# Testing Configuration
TEST_DATABASE_URL=sqlite:///./test_claim_processing.db
TEST_UPLOAD_FOLDER=./test_uploads

# Development Tools
ENABLE_PROFILING=false
ENABLE_SWAGGER=true
ENABLE_METRICS=true